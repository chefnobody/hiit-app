<p id="notice"><%= notice %></p>

<h1>Atheletes</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atheletes.each do |athelete| %>
      <tr>
        <td><%= athelete.first_name %></td>
        <td><%= athelete.last_name %></td>
        <td><%= athelete.age %></td>
        <td><%= link_to 'Show', athelete %></td>
        <td><%= link_to 'Edit', edit_athelete_path(athelete) %></td>
        <td><%= link_to 'Destroy', athelete, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

